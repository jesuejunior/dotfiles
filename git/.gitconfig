[commit]
    verbose = true
    gpgsign = true
[branch]
    autosetuprebase = always
[stash]
    showPatch = true
[merge]
    ff = false
	tool = vimdiff
	conflictstyle = diff3
[mergetool]
	prompt = false
[core]
    editor = vim
[color]
    diff = auto
    status = auto
    branch = auto
    pager = true
    ui = auto
[color "branch"]
    current = green reverse
    local = yellow
    remote = red
[color "diff"]
    meta = yellow
    frag = magenta
    old = red
    new = green
[color "status"]
    added = yellow
    changed = red
    untracked = red reverse
[pull]
	rebase = true
[push]
	default = simple
